{
  "name": "ai-testpilot",
  "version": "1.0.3",
  "description": "An AI-powered zero-config CLI for generating test stubs for Node.js projects",
  "bin": {
    "ai-testpilot": "./bin/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "templates",
    "jest.default.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DianaLeoTang/testpilot.git"
  },
  "scripts": {
    "build": "tsc",
    "generate": "ts-node src/index.ts generate",
    "run": "ts-node src/index.ts run",
    "report": "ts-node src/index.ts report",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [
    "ai",
    "mcp",
    "automation",
    "test",
    "jest",
    "nodejs",
    "typescript",
    "cli",
    "testing",
    "code-generation"
  ],
  "author": "Diana Tang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DianaLeoTang/testpilot/issues"
  },
  "homepage": "https://github.com/DianaLeoTang/testpilot"
}
