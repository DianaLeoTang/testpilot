{
  "name": "testpilot",
  "version": "1.0.0",
  "description": "A universal MCP for automated testing in any Node.js project.",
  "main": "index.ts",
  "bin": {
    "testpilot": "./bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "generate": "ts-node src/index.ts generate",
    "run": "ts-node src/index.ts run",
    "report": "ts-node src/index.ts report",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [
    "mcp",
    "automation",
    "test",
    "jest",
    "nodejs",
    "typescript"
  ],
  "author": "Diana Tang",
  "license": "MIT"
}